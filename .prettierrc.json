{
  "plugins": [
    "@prettier/plugin-pug"
  ],

  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,

  "pugSingleQuote": false,
  "pugSortAttributes": "asc",
  "pugWrapAttributesThreshold": 2,
  "pugEmptyAttributes": "none",
  "pugExplicitDiv": false,

  "importOrderSeparation": true,
  "importOrder": [
    "^vite$",
    "<THIRD_PARTY_MODULES>",
    "@plugins",
    "@pages",
    "@components",
    "@utils",
    "@styles",
    "@assets",
    "^./|^../"
  ]
}